@model IEnumerable<OnlineLibraryASP.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                <label asp-for="First().Title"> </label>
            </th>
            <th>
                <label asp-for="First().Author"></label>
            </th>
            <th>
                <label asp-for="First().BookType"></label>
            </th>
            <th>
                <label asp-for="First().PublicationDate"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.BookType
            </td>
            <td>
                @item.PublicationDate
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
